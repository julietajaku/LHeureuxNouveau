%h1 Listing products
%table
  %thead
    %tr
      %th Name
      %th Par-kilo
      %th Price
      %th{:colspan => "3"}
  %tbody
    - @products.each do |product|
      %tr
        %td= product.name
        %td= product.par_kilo
        %td= product.price
        - if product.available 
          %td= link_to "o" , toggle_available_product_path(product)
        - else 
          %td= link_to "+" , toggle_available_product_path(product)
        %td= link_to 'Edit', edit_product_path(product)
        %td= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Product', new_product_path
