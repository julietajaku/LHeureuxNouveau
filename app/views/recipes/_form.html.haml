= simple_form_for(@recipe) do |f|
  = f.error_notification
  .form-inputs
    = f.input :title
    = f.input :short_desc
    = f.input :instructions

    = f.simple_fields_for :ingredients do |ingredient_form|
      = render 'ingredient_fields', :f => ingredient_form
      %br
    
  .form-actions
    = f.button :submit
